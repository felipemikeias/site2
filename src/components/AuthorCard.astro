---
const { authorName = "Jos√© Silva", authorDescription = "Editor Chefe e criador do blog.", authorImage = "https://cdn.justpcs.com.br/wp-content/uploads/jose-silva-justpcs.webp" } = Astro.props;
---

<div class="author-card">
  <img src={authorImage} alt={`Foto de ${authorName}`} class="author-image" width="96" height="96" loading="lazy" />
  <div class="author-info">
    <h3 class="author-name">{authorName}</h3>
    <p class="author-description">{authorDescription}</p>
  </div>
</div>

<style>
  .author-card {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    background-color: var(--color-background-light);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-lg);
    padding: var(--spacing-lg);
    margin-top: var(--spacing-xl);
    box-shadow: var(--shadow-sm);
  }

  .author-image {
    width: 96px;
    height: 96px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0; /* Prevent image from shrinking */
  }

  .author-info {
    flex-grow: 1;
  }

  .author-name {
    font-size: var(--font-size-xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-xs);
  }

  .author-description {
    font-size: var(--font-size-base);
    color: var(--color-text-dark);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .author-card {
      flex-direction: column;
      text-align: center;
    }
    .author-image {
      margin-bottom: var(--spacing-sm);
    }
  }
</style>
